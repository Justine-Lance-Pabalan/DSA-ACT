#include <iostream>
using namespace std;

int main() {
    int rows, columns;

    cout << "Row size: ";
    cin >> rows;
    cout << "Column size: ";
    cin >> columns;

    int arr[rows][columns];

    for (int i = 1; i <= rows; ++i) {
        for (int j = 1; j <= columns; ++j) {
            cout << "R" << i << "C" << j << ": ";
            cin >> arr[i - 1][j - 1];
        }
    }

    int total = 0;
    for (int i = 0; i < rows; ++i) {
        int rowSum = 0;
        for (int j = 0; j < columns; ++j) {
            rowSum += arr[i][j];
        }
        total += rowSum * (i + 1);
    }

    cout << "Total: " << total << endl;
    return 0;
}
